				</div>
				<div>
					<ScrollButton client:visible />
				</div>
			</div>
			<!-- Image Column -->
			<div id="title_image" class="md:w-[35vw] md:h-auto pt-12 flex items-end justify-center flex-col items-center justify-center">
				<img src="/graphic.png" class="md:w-[60rem] lg:w-[50rem] mb-10" />
			</div>
		</div>
		
		<div id="vendors" class="bs bg-opacity-100 z-20 relative shadow-md">
