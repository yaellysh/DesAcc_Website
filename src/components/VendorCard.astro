---
export interface Props {
  name: string;
  imageSrc?: string;
  description: string[];
  location: string;
  marginClass?: string; // Add this line
}


const { name, imageSrc, description, location } = Astro.props;
---

<div class=`bg-white shadow-md rounded-lg p-2 md:p-10 md:m-1 flex flex-col items-start w-full`>
  {imageSrc && <img src={imageSrc} alt="Icon" class="h-[2rem] md:h-[3rem] mb-3" />}
  <h2 class="text-[0.6rem] md:text-xl font-semibold">{name}</h2>
  {Array.isArray(description) && description.map((desc) => (
    <p class="text-[0.6rem] md:text-sm">{desc}</p>
  ))}
  <p class="text-[0.6rem] md:text-lg font-bold">{location}</p>
</div>
