---
import Layout from '../layouts/Layout.astro';
import Navbar_main from '../components/NavbarMain.jsx';
import VendorCard from '../components/VendorCard.astro';
import Footer from '../components/Footer.jsx';
import FooterTop from '../components/FooterTop.jsx';
import ScrollButtons from '../components/ScrollButtons.jsx';
---

<Layout>
	<head>
		<link href="https://fonts.googleapis.com/css2?family=Albert+Sans:wght@400;700&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400;700&display=swap" rel="stylesheet">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Libre+Caslon+Display&family=Numans&family=Shippori+Mincho&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://use.typekit.net/skz6tog.css">
	</head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<div class="min-h-screen flex flex-col relative">
		<Navbar_main client:visible/>
		<div id="home" class="w-full title-bg-image shadow-md"> <!-- Background div -->

			<div class="flex flex-col md:py-12 2xl:py-32 md:flex-row mx-12 md:mx-20 2xl:mx-36"> <!-- Content div -->

			  <!-- Text Column -->
			  <div class="pl-10 py-16 w-[90vw] flex flex-col">
				<div>
					<h1 id="title" class="text-4xl md:text-[42px] 2xl:text-6xl 3xl:text-7xl font-bold leading-tight">
						Your Health Data. <span class="text-[#e36909]">Unleashed.</span>
					</h1>
			
					<p class="text-lg md:pt-2 2xl:pt-4 md:text-2xl 3xl:text-5xl mb-2 text-gray-400 rotating-text" id="rotatingText"></p>
					<p class="pr-12 md:pr-0 text-sm md:text-2xl md:leading-none py-14 w-[95%] lg:w-[30vw] 3xl:text-5xl 3xl:my-16">
						Delivering continuity across health data environments in a world of ever-increasing data complexity. 
					</p>
				</div>
				<div>
				  <ScrollButtons client:visible />
				</div>
			  </div>


			  <!-- Image Column -->
			  <div id="title_image" class="w-full flex justify-center items-center">
				<img src="/graphic.png" class="w-[90%] md:w-[50rem] lg:w-[60rem] xl:w-[70rem] 3xl:w-[80rem] max-w-full object-contain" />
			  </div>

			</div> <!-- Content div -->

		  </div> <!-- Background div -->
		  
		
		<div id="clients" class="bs pt-4 bg-opacity-100 z-20 relative shadow-md 3xl:py-16">
			<h1 class="mx-20 text-center font-bold text-xs md:text-2xl text-[#194b92] pt-8 h-14 flex items-center justify-center 3xl:text-4xl">
				Trusted by healthcare systems and vendors around the world for over 30 years. 
			  </h1>
			  
			<div id="vendor_logos" class="grid grid-cols-2 md:gap-4 justify-center overflow-x-auto md:flex md:justify-center" style="justify-items: center;">
				<img src="/vendor_logos/Ochsner Health System small.png" alt="Ochsner Health Logo" class="h-[6rem] md:h-[8rem] xl:h-[10rem] md:mx-[1rem] 3xl:h-[14rem]" />
				<img src="/vendor_logos/Government of Western Australia small.png" alt="Western Australia Health Logo" class="h-[6rem] md:h-[8rem] xl:h-[10rem] 3xl:h-[14rem] md:mx-[1rem]" />
				<img src="/vendor_logos/Standford Health Care small.png" alt="Standford Health Care Logo" class="h-[6rem] md:h-[8rem] xl:h-[10rem] 3xl:h-[14rem] md:mx-[1rem]" />
				<img src="/vendor_logos/Lameris_logo.png" alt="Lameris Logo" class="h-[6rem] md:h-[6rem] xl:h-[8rem] 3xl:h-[11rem]  py-6 md:mx-[1rem] md:my-[1.5rem]" />
			</div>
		</div>

		<div id="vendorSection" class="flex flex-col lg:flex-row py-12 items-stretch h-full vendor-bg-image shadow-md">
			<!-- Button column -->
			<div id="toggleButton" class="flex items-center pl-16">
				<button  class="p-2 bg-gray-400 mr-4 text-white rounded">
					←
				</button>
			</div>

			<!-- Vendor card column -->
			<div class="flex flex-col lg:w-[100em] xl:w-[100em] items-center">
				<div id="vendorFrame" class="relative mx-8">
				  <div id="vendorGroup1" class="grid grid-cols-2 gap-2 md:gap-x-2">
					<VendorCard 
					  name="Ochsner Health"
					  imageSrc="/vendor_logos/Ochsner Health System.png" 
					  description={["PACS/CPACS", "20+ PACS Engagement"]}
					  location="North America"
					/>
					<VendorCard 
					  name="Western Australia Health" 
					  imageSrc="/vendor_logos/Government of Western Australia.png" 
					  description={["PACS/VNA/RIS", "Images & 70M+ Reports"]}
					  location="APAC"
					/>
					<VendorCard 
					  name="Stanford Health Care" 
					  imageSrc="/vendor_logos/Standford Health Care.png" 
					  description={["APLIS/PACS", "Non-WSI Pathology"]}
					  location="North America"
					/>
					<VendorCard 
					  name="Laméris" 
					  imageSrc="/vendor_logos/Lameris_logo.png" 
					  description={["Partner Engagement", "Ophthalmology"]}
					  location="Europe"
					/>
				  </div>
				  <div id="vendorGroup2" class="grid grid-cols-2 gap-2 md:gap-x-2 hidden">
					<VendorCard 
					  name="Global Technology Vendor" 
					  imageSrc="/vendor_logos/world2.png" 
					  description={["Oncology Platform", "2000+ Cancer Centers"]}
					  location="Worldwide"
					/>
					<VendorCard 
					  name="Healthcare Provider" 
					  imageSrc="/vendor_logos/rhcp.png" 
					  description={["200+ Regional Hospitals", "PACS/VNA"]}
					  location="North America"
					/>
					<VendorCard 
					  name="Partner Engagement" 
					  imageSrc="/vendor_logos/doc.png" 
					  description={["Document Repository", "XDS Delivery"]}
					  location="Europe"
					/>
					<VendorCard 
					  name="Outpatient Imaging Provider" 
					  imageSrc="/vendor_logos/rad svc.png" 
					  description={["PACS/VNA", "Cloud Centralization"]}
					  location="North America"
					/>
				  </div>
				</div>
			  </div>
			  

			<!-- Text column -->
			<div class="flex items-center justify-center px-12">
				<p class="pt-12 text-center text-sm md:text-3xl 2xl:4xl md:mx-4 text-left">
					We deliver data-driven software and services to healthcare enterprises and vendors worldwide, providing complete data control at the petabyte scale.
			</div>
		</div>

		<!-- Services Div -->
		<div id="services" class="bg-opacity-100 z-20 relative pt-8 pb-24 shadow-md h-full">
			<h1 class="text-xl md:text-5xl 2xl:text-6xl 3xl:text-7xl px-12 md:px-32 font-bold pt-8 pb-4 md:pb-12 2xl:pb-20 text-center text-[#194b92]">
				Designing Access to Health Data 
			</h1>
			<div class="flex flex-col lg:flex-row md:mx-32 h-full" style="align-items: stretch;">
				<!-- Quote Section -->
				<div id="hdd_col1" class="flex-1 lg:w-1/4 flex flex-col">
					<h3 class="text-center lg:text-left text-xl md:text-3xl 2xl:text-4xl 3xl:text-5xl pb-4 font-bold text-[#e3690a]">Discovery and Delivery</h3>
					<p class="font-lato text-center lg:text-left text-sm md:text-[2rem] 2xl:text-[2rem] 3xl:text-4xl italic md:leading-none px-12 lg:px-0 lg:pr-20">
						"Our mission at DesAcc is to develop software and deliver focused expertise that breaks down barriers to health data utilization, ensuring healthcare practitioners and AI models can access the information needed to deliver the best data-driven decisions possible."
					</p>
						
						
					<div id="credits" class="text-center lg:text-left mt-auto pt-4 lg:pt-0">
						<h1 class="text-sm md:text-3xl">Hugh Lyshkow</h1>
						<p class="text-sm md:text-xl font-bold">CEO, Co-Founder</p>
					</div>
				</div>
			
				<!-- Services Section -->
				<div class="mt-8 lg:mt-0 flex-1 px-8 md:px-0 lg:mr-16 leading-none flex flex-col justify-between h-full">
					<h3 class="text-center lg:text-left text-xl md:text-3xl 2xl:text-4xl 3xl:text-5xl pb-4 font-bold text-[#e3690a]">Services for Unlocking</h3>
					<div id="services" class="text-justify text-[0.6rem] md:text-lg flex-grow">
						<p class="services_title">Radiology Silos</p>
						<p class="services_body">PACS and VNA migrations (rapid media-based, cloud and DICOM). Tech refreshes. RIS migrations. Tape and HSM migrations.</p>
						<p class="services_title">Pathology Silos</p>
						<p class="services_body">Proprietary to Whole Slide Imaging (WSI) DICOM. APLIS migrations. Gross anatomy and non-WSI to DICOM.</p>
						<p class="services_title">Cardiology Silos</p>
						<p class="services_body">CPACS and CVIS migrations. ECG to DICOM, including GE MUSE. Waveform to DICOM Encapsulated PDF (DEP). </p>
						<p class="services_title">Document Silos</p>
						<p class="services_body">File-based migrations. Tivoli Storage Manager (TSM), DiskXtender, and SAMfs. IHE Cross-Enterprise Document Sharing (XDS).</p>
						<p class="services_title">Report Silos</p>
						<p class="services_body">Radiology, cardiology, and pathology reports (Text, RTF, Word, PDF, HTML) to DICOM, HL7, and XDS.</p>
						<p class="services_title">Legacy Silos</p>
						<p class="services_body_last">Decommission legacy silos. Free up rack space used by legacy PACS and other storage systems. LTO tape extraction.</p>
					</div>
				</div>
			
				<!-- Software Section -->
				<div class="mt-8 lg:mt-0 flex-1 px-8 md:px-0 leading-none flex flex-col justify-between h-full">
					<h3 class="text-center lg:text-left text-xl md:text-3xl pb-4 2xl:text-4xl 3xl:text-5xl  font-bold text-[#e3690a]">Software for Delivering</h3>
					<div id="software" class="text-justify text-[0.6rem] md:text-lg flex-grow">
						<p class="services_title">Data Discovery</p>
						<p class="services_body">Analyze silos at the byte level. Discover what data you have and where it is located for RFPs, migrations, or decommissioning legacy systems.</p>
						<p class="services_title">Data Quality</p>
						<p class="services_body">Big Data is messy; understanding missing values, duplicates, and clashes between silos is the first step toward better data.</p>
						<p class="services_title">Data for AI</p>
						<p class="services_body">Better data means better AI models. Understand data quality and deliver data without impacting production environments.</p>
						<p class="services_title">Data Delivery</p>
						<p class="services_body">Get your data where it needs to go, rapidly. Migration from legacy systems to new environments, to and from cloud-based storage.</p>
						<p class="services_title">Data for Cloud</p>
						<p class="services_body">Enterprise engagements need the ability to move from on-prem to cloud and hybrid environments quickly and efficiently.</p>
						<p class="services_title">Data Lifecycle Management</p>
						<p class="services_body_last">Understand how much of your data sits outside of retention rules. Filter unneeded data and tier data according to its age.</p>
					</div>
				</div>
			</div>
		</div>
		<!-- Services Div -->
		  
	</div>
	<FooterTop />
	<Footer />
</Layout>

<script>
	const texts = [
		"Delivering cloud deployment.",
		"Empowering healthcare innovation.",
		"Transforming data into insights.",
		"Connecting health systems globally.",
		"Enabling AI readiness."
	];

	let index = 0;
	const rotatingTextElement = document.getElementById('rotatingText');

	function changeText() {
		if (rotatingTextElement) {
			rotatingTextElement.classList.remove('visible'); 
			setTimeout(() => {
				rotatingTextElement.textContent = texts[index];
				rotatingTextElement.classList.add('visible'); 
			}, 500); 
		}
		index = (index + 1) % texts.length;
	}

	setInterval(changeText, 3000);
	changeText(); 

	const vendorGroup1 = document.getElementById('vendorGroup1');
	const vendorGroup2 = document.getElementById('vendorGroup2');

	let currentGroup = 1;

	function toggleVendorGroups() {
		if (vendorGroup1 && vendorGroup2) {
			if (currentGroup === 1) {
				vendorGroup1.classList.add('fade-out');
				setTimeout(() => {
					vendorGroup1.classList.add('hidden');
					vendorGroup1.classList.remove('fade-out');
					vendorGroup2.classList.remove('hidden');
					vendorGroup2.classList.add('fade-in');
					setTimeout(() => vendorGroup2.classList.remove('fade-in'), 500);
					currentGroup = 2;
				}, 500);
			} else {
				vendorGroup2.classList.add('fade-out');
				setTimeout(() => {
					vendorGroup2.classList.add('hidden');
					vendorGroup2.classList.remove('fade-out');
					vendorGroup1.classList.remove('hidden');
					vendorGroup1.classList.add('fade-in');
					setTimeout(() => vendorGroup1.classList.remove('fade-in'), 500);
					currentGroup = 1;
				}, 500);
			}
		} else {
			console.error('Vendor groups not found');
		}
	}

	setInterval(toggleVendorGroups, 8000);

	const toggleButton = document.getElementById('toggleButton');
	if (toggleButton) {
		toggleButton.addEventListener('click', toggleVendorGroups);
	}

</script>


<style>
	.rotating-text {
		transition: opacity 0.5s ease-in-out;
		opacity: 0; 
	}
	.rotating-text.visible {
		opacity: 1;
	}

	.fade-out {
		opacity: 1;
		animation: fadeOut 0.5s ease-in-out forwards;
	}

	@keyframes fadeOut {
		0% {
			opacity: 1;
			transform: translateX(0);
		}
		100% {
			opacity: 0;
			transform: translateX(-20px);
		}
	}

	/* Fade in animation */
	.fade-in {
		opacity: 0;
		animation: fadeIn 0.5s ease-in-out forwards;
	}

	@keyframes fadeIn {
		0% {
			opacity: 0;
			transform: translateX(20px);
		}
		100% {
			opacity: 1;
			transform: translateX(0);
		}
	}

	.hidden {
		display: none;
	}

	.title-bg-image {
		position: relative;
		background-image: url('/bg_images/title_bg.png');
		background-size: cover; /* Full screen width, height adjusts automatically */
		background-position: top center; /* Aligns the image at the top center */
		background-repeat: no-repeat; /* Prevents tiling */
	}

	.vendor-bg-image {
		position: relative;
		background-image: url('/bg_images/vendor_bg.png');
		background-size: cover; /* Full screen width, height adjusts automatically */
		background-position: top center; /* Aligns the image at the top center */
		background-repeat: no-repeat; /* Prevents tiling */
	}

	#title_image {
		display: none;
	}

	#toggleButton {
		display: none;
	}

	.services_title {
		font-weight: bold;
		font-size: medium;
	}

	@media (max-width: 768px) {
		.services_title {
			font-size: small;
			line-height: 1;
		}
	}

	@media (min-width: 1023px) {
		#toggleButton {
			display: flex;
		}

		#title_image {
			display: flex;
		}
	}

	.services_body {
		font-size: small;
		margin-top: 0.25rem;
    	line-height: 1.2;
		margin-bottom: 1rem;
	}
	
	.services_body_last {
		font-size: small;
		margin-top: 0.25rem;
    	line-height: 1.2;
	}
	
  @media (max-width: 768px) {
    .services_title {
      font-size: small;
      line-height: 1;
    }
    .services_body {
      font-size: small;
	  margin-top: 0.25rem;
      line-height: 1.2;
	  margin-bottom: 1rem;
    }

	.services_body {
      font-size: small;
      line-height: 1.2;
    }
  }

  @media (min-width: 769px) and (max-width: 2000px) {
    .services_title {
      font-size: medium;
      line-height: 1.2;
    }
    .services_body {
      font-size: medium;
      line-height: 1.4;
    }

	.services_body_last {
      font-size: medium;
      line-height: 1.4;
    }

	
  }

  @media (min-width: 2001px) {
    .services_title {
      font-size: x-large;
      line-height: 1.4;
    }
    .services_body {
      font-size: large;
      line-height: 1.6;
    }
	.services_body_last {
		font-size: large;
      	line-height: 1.6;
	}
  }

	.shippori-mincho-regular {
		font-family: "Shippori Mincho", serif;
		font-weight: 100;
		font-style: normal;
	}
</style>

