---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.jsx';
import VendorCard from '../components/VendorCard.astro';
import Footer from '../components/Footer.jsx';
import ScrollButton from '../components/ScrollButton.jsx';
---


<Layout>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<div class="min-h-screen flex flex-col relative">
		<Navbar client:visible/>
		<div class="flex flex-col md:flex-row p-4 md:py-12 items-stretch title-bg-image shadow-md">
			<!-- Text Column -->
			<div class="md:w-1/2 pl-10 md:pl-32 py-16 flex flex-col justify-between">
			<div>
